# Database Configuration
MONGODB_URI=mongodb://localhost:27017/simt
# For Azure Cosmos DB: mongodb://simt-db:your-connection-string@simt-db.mongo.cosmos.azure.com:10255/?ssl=true&replicaSet=globaldb

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=7d

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# WhatsApp Configuration
WHATSAPP_SESSION_PATH=./sessions

# Telegram Configuration
TELEGRAM_BOT_TOKEN=your-telegram-bot-token-here

# Server Configuration
PORT=3000
NODE_ENV=development

# Frontend URL
FRONTEND_URL=http://localhost:5173

# Azure Configuration (for production)
AZURE_STORAGE_CONNECTION_STRING=your-azure-storage-connection-string
AZURE_STORAGE_CONTAINER_NAME=simt-files

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_ROUNDS=12
CORS_ORIGIN=http://localhost:5173

# Logging
LOG_LEVEL=info

